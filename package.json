{
  "name": "ws-regexp",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/@lazy-cjk/*",
    "packages/@regexp-cjk/*",
    "packages/@node-novel/*",
    "packages/*"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\"",
    "lerna:publish": "yarn run prepublishOnly && npx lerna publish && yarn run postpublishOnly",
    "lerna:publish:yes": "yarn run prepublishOnly && npx lerna publish --yes --bump patch && yarn run postpublishOnly",
    "prepublish:fix-links": "ynpx @yarn-tool/fix-ws-links",
    "prepublish:lockfile": "npx sync-lockfile .",
    "prepublishOnly": "yarn run prepublish:fix-links && ts-node ./script/run/ws-prepublish.ts",
    "postpublish:subtree": "ts-node ./script/run/postpublish-subtree.ts",
    "postpublish:subtree:cjk-conv": "git subtree push cjk-conv master --prefix packages/cjk-conv",
    "postpublish:subtree:regexp-cjk": "git subtree push regexp-cjk master --prefix packages/regexp-cjk",
    "postpublishOnly": "yarn run postpublish:subtree",
    "postpublishOnly:add": "ts-node ./script/run/postpublish-add.ts",
    "ncu": "npx yarn-tool ncu -u && npx yarn-tool ws exec yarn-tool ncu -- -u",
    "sort-package-json": "npx yarn-tool sort && npx yarn-tool ws exec yarn-tool sort"
  },
  "resolutions": {},
  "dependencies": {
    "@git-lazy/spawn": "^1.0.20",
    "@lazy-node/readlines": "^2.0.5",
    "@yarn-tool/find-deps": "^1.0.9",
    "@yarn-tool/ws-changed": "^1.0.14",
    "bluebird": "^3.7.2",
    "build-ts-file": "^1.0.9",
    "cross-fetch": "^3.0.5",
    "cross-spawn-extra": "^2.1.0",
    "debug-color2": "^1.2.3",
    "diff": "^4.0.2",
    "fs-extra": "^9.0.1",
    "git-root2": "^1.0.18",
    "jest": "^26.1.0",
    "jszip": "^3.5.0",
    "sort-object-keys2": "^2.0.3",
    "ts-jest": "^26.1.1",
    "uni-string": "^1.1.10",
    "ws-pkg-list": "^1.0.32",
    "zero-width": "^1.0.14"
  },
  "devDependencies": {
    "@bluelovers/tsconfig": "^1.0.19",
    "@types/bluebird": "^3.5.32",
    "@types/diff": "^4.0.2",
    "@types/eslint": "^7.2.0",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.3",
    "@types/lodash": "^4.14.157",
    "@types/node": "*",
    "@types/yargs": "^15.0.5",
    "eslint": "^7.3.1"
  },
  "peerDependencies": {
    "lerna": "^3"
  }
}
